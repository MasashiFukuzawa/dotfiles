{
    "editor.tabSize": 2,
    "editor.minimap.enabled": false,
    "editor.wordWrap": "on",
    "editor.largeFileOptimizations": false,
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.list.keyboardNavigation": "simple",
    "workbench.colorTheme": "One Monokai",
    "window.zoomLevel": 1,
    "terminal.integrated.rendererType": "dom",
    "terminal.integrated.fontSize": 12,
    "gitlens.gitCommands.closeOnFocusOut": true,
    "gitlens.gitCommands.skipConfirmations": [
        "fetch:command",
        "switch:command"
    ],
    "[typescript]": {
        "editor.formatOnSave": true
    },
    "[typescriptreact]": {
        "editor.formatOnSave": true
    },
    "breadcrumbs.enabled": true,
    "ruby.codeCompletion": "rcodetools",
    "ruby.format": "rubocop",
    "ruby.intellisense": "rubyLocate",
    "yaml.schemas": {
        "https://raw.githubusercontent.com/kogosoftwarellc/open-api/master/packages/openapi-schema-validator/resources/openapi-3.0.json": ["*swagger.yaml", "*swagger.yml"],
    },
    "extensions.ignoreRecommendations": false,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "trailing-spaces.trimOnSave": true,
    "diffEditor.ignoreTrimWhitespace": false,
        "git.autofetch": true,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": ["j"], "after": ["g", "j"]},
        { "before": ["k"], "after": ["g", "k"]},
        { "before": ["J"], "after": ["1", "0", "j"]},
        { "before": ["K"], "after": ["1", "0", "k"]},
        { "before": ["<leader>", "h"], "after": ["^"] },
        { "before": ["<leader>", "l"], "after": ["$"] },
        { "before": [";"], "after": [":"] },
        { "before": [":"], "after": ["."] },
        { "before": ["."], "after": [";"] },
        { "before": ["s"], "after": ["i", "<delete>"] },
        { "before": ["S"], "after": ["^", "C"] },
        { "before": ["<C-n>"], "after": ["g", "b"] },
        { "before": [">"], "commands" : ["editor.action.indentLines"] },
        { "before": ["<"], "commands" : ["editor.action.outdentLines"] },
        { "before": ["<Leader>", "p"],"commands": [{ "command": "workbench.action.quickOpen" }] },
        { "before": ["<Leader>", "/"], "commands": [{ "command": "editor.action.commentLine" }] },
        { "before": ["<Leader>", "w"], "commands": [":wa"] },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        { "before": ["J"], "after": ["1", "0", "j"] },
        { "before": ["v", "J"], "after": ["1", "0", "j"] },
        { "before": ["K"], "after": ["1", "0", "k"] },
        { "before": ["v", "K"], "after": ["1", "0", "k"] },
        { "before": ["v"], "after": ["a", "f"] },
        { "before": ["v", "v"], "after": ["a", "f"] },
        { "before": ["<Leader>", "h"], "after": ["^"] },
        { "before": ["<Leader>", "l"], "after": ["$", "h"] },
        { "before": ["v", "<Leader>", "h"], "after": ["^"] },
        { "before": ["v", "<Leader>", "l"], "after": ["$", "h"] },
        { "before": ["<C-n>"], "after": ["g", "b"] },
        { "before": ["v", "<C-n>"], "after": ["g", "b"] },
        { "before": [">"], "commands" : ["editor.action.indentLines"] },
        { "before": ["<"], "commands" : ["editor.action.outdentLines"] },
        { "before": ["<Leader>", "p"], "commands": [{ "command": "workbench.action.quickOpen" }] },
        { "before": ["<Leader>", "/"], "commands": [{ "command": "editor.action.commentLine" }] },
        { "before": ["<Leader>", "w"], "commands": [":wa"] },
    ],
    "vim.insertModeKeyBindings": [
        { "before": ["j", "j"], "after": ["<Esc>"] },
    ],
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false,
        "<C-h>": false,
    },
    "vim.hlsearch": true,
    "vim.useCtrlKeys": true,
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/local/bin/nvim",
    "vim.useSystemClipboard": true,
    "vim.easymotion": true,
    "vim.visualstar": true,
    "vim.ignorecase": true,
    "vim.incsearch": true,
    "vim.sneak": true,
}
